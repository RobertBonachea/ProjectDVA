@model Domain.Entities.Person

<!-- Main Content -->
<div class="content margin-top60 margin-bottom60">
    <div class="container">
        <div class="row">

            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="margin-top">
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div class="title-box">
                                <h3>Profile Information</h3>
                            </div>
                            <ul class="list-unstyled">
                                <li>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.FirstName) <span class="required">*</span>

                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LastName) <span class="required">*</span>

                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </li>
                                <li>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email) <span class="required">*</span>

                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="title-box">
                                <h3>&nbsp;</h3>
                            </div>
                            <ul class="list-unstyled">
                                <li>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HomePhone) <span class="required">*</span>

                                        @Html.EditorFor(model => model.HomePhone, new { htmlAttributes = new { @class = "form-control phone" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MobilePhone) <span class="required">*</span>

                                        @Html.EditorFor(model => model.MobilePhone, new { htmlAttributes = new { @class = "form-control phone" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DateOfBirth) <span class="required">*</span>

                                        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control dob" } })
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div class="title-box">
                                <h3>Address Information</h3>
                            </div>
                            <ul class="list-unstyled">
                                <li>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address.Address1) <span class="required">*</span>

                                        @Html.EditorFor(model => model.Address.Address1, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address.City) <span class="required">*</span>

                                        @Html.EditorFor(model => model.Address.City, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </li>
                                <li>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address.Zipcode) <span class="required">*</span>

                                        @Html.EditorFor(model => model.Address.Zipcode, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="title-box">
                                <h3>&nbsp;</h3>
                            </div>
                            <ul class="list-unstyled">
                                <li>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address.Address2)

                                        @Html.EditorFor(model => model.Address.Address2, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address.State) <span class="required">*</span>
                                        @Html.DropDownListFor(model => model.Address.State, Presentation.Utilities.Extensions.GetStatesList(), new { @class = "form-control" })


                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>

                    <div class="buttons-box clearfix">
                        <button class="btn btn-color">Save</button>
                        <span class="required pull-right"><b>*</b> Required Field</span>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
<!-- /Main Content -->

