@model Domain.Entities.Person


    <div class="modal-header">
        <a aria-hidden="true" data-dismiss="modal" class="close" href="#"><span>×</span></a>

        <h4 class="modal-title">Demographic Demo Manager</h4>
        <small class="font-bold">Remove Profile - @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</small>
    </div>


    <div class="modal-body">
        <h3>Are you sure you want to delete this profile?</h3>
        <span class="required">This action cannot be undone.</span>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PersonId)
            

            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>

        }

    </div>


