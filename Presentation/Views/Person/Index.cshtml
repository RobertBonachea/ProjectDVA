@model IEnumerable<Domain.Entities.Person>

@{
    ViewBag.Title = "Index";
}


<div class="content margin-top60 margin-bottom60">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 wow fadeIn">

                <p>
                    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-color" })
                </p>

                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-responsive text-left my-orders-table">
                        <thead>
                            <tr class="first last">
                                <th>
                                    Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HomePhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateOfBirth)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address.Address1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address.State)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)

                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HomePhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address.Address1) @Html.DisplayFor(modelItem => item.Address.Address2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address.State)

                                </td>
                                <td>

                                    @Html.ActionLink("Edit", "Edit", new { id = item.PersonId }, new {@class = "btn btn-xs btn-info" })

                                    @Html.ActionLink("Details", "Details", new { id = item.PersonId }, new { data_modal = "", @class = "btn btn-xs btn-color" })

                                    @Html.ActionLink("Delete", "Delete", new { id = item.PersonId }, new { @data_modal = "", @class = "btn btn-xs btn-danger" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<section id="modals">
    <!-- generic modal -->
    <div id='genericModal' class='modal fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='genericModalContent'></div>
            </div>
        </div>
    </div>
    <!-- /generic modal-->

   

</section>